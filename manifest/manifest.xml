<?xml version="1.0" encoding="UTF-8" ?>
<!--
  primary-color:          Application Nav Bar background, tract:header background, tract:card title font color,
                          event button background, input field border/highlight.
                          Renderer may lighten/darken to create highlight/hover colors
                            DEFAULT( rgba(59, 164, 219, 1) )

  primary-text-color:     Color used for text inside primary-color background, for contrast.
                            DEFAULT( rgba(255, 255, 255, 1) )

  text-color:             Color used for content:text fields
                            DEFAULT( rgba(90, 90, 90, 1) )

  text-size:              Font size used for all text, elements can use text-scale to adjust this per element.
                            EX: (text-size = 18px; text-scale = 3.0;) == 54px
                            DEFAULT( 18px )

  background-color:        Application background color, tract:page background color
                            DEFAULT( rgba(255, 255, 255, 1) )

  background-image:       Application background image
                            DEFAULT( none )

  background-image-align: (top|bottom|left|right|center)
                            DEFAULT( center )
-->
<manifest xmlns="https://mobile-content-api.cru.org/xmlns/manifest"
          xmlns:content="https://mobile-content-api.cru.org/xmlns/content"
          background-color="{{rgba}}"
          background-image="{{image reference}}"
          background-image-align="repeat"
          primary-color="{{rgba}}"
          primary-text-color="{{rgba}}"
          text-color="{{rgba}}">
  <!--
    Content Title - REQUIRED
     - displayed in app nav with no parallel language
  -->
  <title>
    <content:text i18n-id="{{uuid}}">Lorem Ipsum Bacon</content:text>
  </title>

  <!--
    Pages - REQUIRED
      ordered list of app pages
  -->
  <pages>
    <page id="{{event_id}}" src="{{page_xml_uri}}"/>
    <page id="{{event_id}}" src="{{page_xml_uri}}"/>
    <page id="{{event_id}}" src="{{page_xml_uri}}"/>
  </pages>

  <!--
    Resources - REQUIRED
      list of all resources used within this tract
  -->
  <resources>
    <resource id="{{id_or_filename}}" src="{{sha256.jpg}}" />
  </resources>
</manifest>
